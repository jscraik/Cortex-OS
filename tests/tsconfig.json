{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "../dist/tests",
    "tsBuildInfoFile": "../dist/tests/.tsbuildinfo",
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "../**/*.spec.ts",
    "../**/*.test.ts",
    "../tests/**/*.ts",
    "../src/__tests__/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../dist",
    "../build",
    "../coverage"
  ]
}