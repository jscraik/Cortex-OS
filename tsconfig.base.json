{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "lib": [
      "ES2023",
      "DOM"
    ],
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "noEmit": true,
    "strict": true,
    "downlevelIteration": true,
    "ignoreDeprecations": "5.0"
  },
  "exclude": [
    "**/dist",
    "**/.nx",
    "**/examples/**"
  ]
}
