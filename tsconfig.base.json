{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ES2023",
      "DOM"
    ],
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@cortex-os/a2a": [
        "packages/a2a/src/index.ts"
      ],
      "@cortex-os/a2a/*": [
        "packages/a2a/src/*"
      ],
      "@cortex-os/a2a-contracts": [
        "packages/a2a/a2a-contracts/dist/index.d.ts",
        "packages/a2a/a2a-contracts/dist/index.js"
      ],
      "@cortex-os/a2a-contracts/*": [
        "packages/a2a/a2a-contracts/dist/*.d.ts",
        "packages/a2a/a2a-contracts/dist/*"
      ],
      "@cortex-os/agent-contracts": [
        "libs/typescript/agent-contracts/src/index.ts"
      ],
      "@cortex-os/agent-contracts/*": [
        "libs/typescript/agent-contracts/src/*"
      ],
      "@cortex-os/commands": [
        "packages/commands/src/index.ts"
      ],
      "@cortex-os/commands/*": [
        "packages/commands/src/*"
      ],
      "@cortex-os/hooks": [
        "packages/hooks/src/index.ts"
      ],
      "@cortex-os/hooks/*": [
        "packages/hooks/src/*"
      ],
      "@cortex-os/contracts": [
        "libs/typescript/contracts/src/index.ts"
      ],
      "@cortex-os/contracts/*": [
        "libs/typescript/contracts/src/*"
      ],
      "@cortex-os/kernel": [
        "packages/kernel/src/index.ts"
      ],
      "@cortex-os/kernel/*": [
        "packages/kernel/src/*"
      ],
      "@cortex-os/observability": [
        "packages/observability/dist/src/index.d.ts",
        "packages/observability/dist/src/index.js"
      ],
      "@cortex-os/observability/*": [
        "packages/observability/dist/src/*.d.ts",
        "packages/observability/dist/src/*"
      ],
      "@cortex-os/orchestration": [
        "packages/orchestration/src/index.ts"
      ],
      "@cortex-os/orchestration/*": [
        "packages/orchestration/src/*"
      ],
      "@cortex-os/prompts": [
        "packages/prompts/src/index.ts"
      ],
      "@cortex-os/prompts/*": [
        "packages/prompts/src/*"
      ],
      "@cortex-os/tool-spec": [
        "packages/tool-spec/src/index.ts"
      ],
      "@cortex-os/tool-spec/*": [
        "packages/tool-spec/src/*"
      ],
      "@cortex-os/skills-schema": [
        "packages/skills-schema/src/index.ts"
      ],
      "@cortex-os/skills-schema/*": [
        "packages/skills-schema/src/*"
      ],
      "@cortex-os/proof-artifacts": [
        "packages/proof-artifacts/src/index.ts"
      ],
      "@cortex-os/proof-artifacts/*": [
        "packages/proof-artifacts/src/*"
      ],
      "@cortex-os/mcp-auth": [
        "packages/mcp-auth/src/index.ts"
      ],
      "@cortex-os/mcp-auth/*": [
        "packages/mcp-auth/src/*"
      ],
      "@cortex-os/cortex-sec": [
        "packages/cortex-sec/src/index.ts"
      ],
      "@cortex-os/cortex-sec/*": [
        "packages/cortex-sec/src/*"
      ],
      "@cortex-os/utils": [
        "libs/typescript/utils/dist/index.d.ts",
        "libs/typescript/utils/dist/index.js"
      ],
      "@cortex-os/utils/*": [
        "libs/typescript/utils/dist/*.d.ts",
        "libs/typescript/utils/dist/*"
      ],
      "@brainwav/telemetry": [
        "packages/telemetry/dist/index.d.ts",
        "packages/telemetry/dist/index.js",
        "packages/telemetry/src/index.ts"
      ],
      "@brainwav/telemetry/*": [
        "packages/telemetry/dist/*.d.ts",
        "packages/telemetry/dist/*",
        "packages/telemetry/src/*"
      ]
    },
    "noEmit": true,
    "strict": true,
    "downlevelIteration": true,
    "ignoreDeprecations": "5.0"
  },
  "exclude": [
    "**/dist",
    "**/.nx",
    "**/examples/**"
  ]
}
