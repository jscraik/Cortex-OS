{
	"compilerOptions": {
		"outDir": "dist",
		"module": "NodeNext",
		"target": "es2022",
		"incremental": true,
		"tsBuildInfoFile": ".tsbuildinfo",
		"lib": [
			"es2022",
			"dom",
			"dom.iterable"
		],
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"strict": false,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"strictFunctionTypes": false,
		"strictBindCallApply": false,
		"strictPropertyInitialization": false,
		"noImplicitReturns": false,
		"noImplicitThis": false,
		"alwaysStrict": false,
		"types": [
			"node"
		],
		"baseUrl": ".",
		"paths": {
			"@cortex-os/a2a-core": ["packages/a2a/a2a-core/src"],
			"@cortex-os/a2a-core/*": ["packages/a2a/a2a-core/src/*"],
			"@cortex-os/mcp-core": ["packages/mcp/mcp-core/src"],
			"@cortex-os/mcp-core/*": ["packages/mcp/mcp-core/src/*"],
			"@cortex-os/orchestration": ["packages/orchestration/src"],
			"@cortex-os/orchestration/*": ["packages/orchestration/src/*"],
			"@cortex-os/memories": ["packages/memories/src"],
			"@cortex-os/memories/*": ["packages/memories/src/*"],
			"@cortex-os/rag": ["packages/rag/src"],
			"@cortex-os/rag/*": ["packages/rag/src/*"],
			"@cortex-os/agents": ["packages/agents/src"],
			"@cortex-os/agents/*": ["packages/agents/src/*"],
			"@cortex-os/asbr": ["packages/asbr/src"],
			"@cortex-os/asbr/*": ["packages/asbr/src/*"],
			"@cortex-os/cortex-os": ["apps/cortex-os/src"],
			"@cortex-os/cortex-os/*": ["apps/cortex-os/src/*"],
			"@cortex-os/simlab": ["packages/simlab/src"],
			"@cortex-os/simlab/*": ["packages/simlab/src/*"],
			"@cortex-types/*": ["libs/typescript/*/src"],
			"@cortex-utils/*": ["libs/*/src"]
		}
	},
	"exclude": [
		"node_modules",
		"dist",
		"out",
		"coverage",
		".nx",
		".turbo",
		".tsbuildinfo",
		"htmlcov",
		"target",
		"**/*.spec.ts",
		"**/*.test.ts",
		"**/__tests__/**",
		"**/*.d.ts",
		"**/vitest.config.ts",
		"**/jest.config.ts",
		"**/.venv/**",
		"**/python/**",
		"**/scripts/**/*.test.*",
		"**/e2e/**",
		"playwright-report/**",
		"test-results/**",
		"snapshots/**",
		".husky/**",
		".github/**",
		"tools/**/*.spec.ts",
		"tools/**/*.test.ts"
	],
	"allowJs": true,
	"include": ["src/**/*", "tests/**/*", "**/*.js", "**/*.ts"],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}