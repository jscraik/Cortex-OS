{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "es2022",
        "lib": [
            "es2022"
        ],
        "types": [
            "node",
            "vitest"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "../../dist/scripts/ci",
        "rootDir": ".",
        "composite": true,
        "tsBuildInfoFile": "../../.tsbuildinfo-scripts-ci",
        "ignoreDeprecations": "6.0"
    },
    "include": [
        "**/*.ts",
        "**/*.mjs",
        "**/*.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
