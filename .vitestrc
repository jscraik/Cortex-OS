# Vitest runtime configuration for optimized performance
NODE_OPTIONS=--max-old-space-size=2048 --expose-gc
VITEST_MAX_THREADS=4
VITEST_MIN_THREADS=2
VITEST_MAX_FORKS=4
VITEST_MIN_FORKS=2
# Force garbage collection between tests
VITEST_FORCE_GC=true
# Enable selective coverage for performance
VITEST_COVERAGE_THRESHOLD=80
VITEST_DISABLE_CONSOLE_INTERCEPT=false
