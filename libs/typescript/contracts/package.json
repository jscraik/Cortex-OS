  "devDependencies": {
    "@types/node": "^22.18.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "eslint": "^9.35.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
