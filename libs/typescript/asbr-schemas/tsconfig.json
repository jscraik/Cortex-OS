{
  "extends": "../../../tsconfig.json",
  "include": [
    "src/**/*",
    "vitest.config.ts",
    "tests/**/*"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "emitDeclarationOnly": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "types": [
      "node"
    ],
    "ignoreDeprecations": "5.0"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
