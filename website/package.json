{
  "name": "cortex-os-docs",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start:local": "docusaurus start --config docusaurus.config.local.ts --port 3005",
    "build:local": "docusaurus build --config docusaurus.config.local.ts",
    "serve:local": "docusaurus serve --config docusaurus.config.local.ts",
    "clear": "docusaurus clear",
    "typecheck": "tsc",
    "sync": "tsx sync-docs.ts",
    "dev": "pnpm sync && pnpm start:local",
    "test": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@docusaurus/core": "^3.5.2",
    "@docusaurus/preset-classic": "^3.5.2",
    "@docusaurus/theme-mermaid": "^3.5.2",
    "@mdx-js/react": "^3.0.0",
    "clsx": "^2.0.0",
    "prism-react-renderer": "^2.3.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "^3.5.2",
    "@docusaurus/types": "^3.5.2",
    "@types/node": "^24.4.0",
    "tsx": "^4.19.0",
    "typescript": "~5.2.0",
    "vitest": "^3.2.4"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0"
  }
}