{
  "services": [
    {
      "name": "mcp",
      "port": 3000,
      "env": "MCP_PORT",
      "notes": "Cloudflare tunnel reserved"
    },
    {
      "name": "github-ai",
      "port": 3001,
      "env": "GITHUB_AI_PORT",
      "notes": "GitHub AI app"
    },
    {
      "name": "semgrep",
      "port": 3002,
      "env": "SEMGREP_PORT",
      "notes": "Semgrep app"
    },
    {
      "name": "structure",
      "port": 3003,
      "env": "STRUCTURE_PORT",
      "notes": "Structure app"
    }
  ],
  "mcpServers": {
    "RepPrompt": {
      "command": "/Users/jamiecraik/RepoPrompt/repoprompt_cli",
      "args": [],
      "description": "brAInwav Repository analysis and context generation for Qoder IDE",
      "capabilities": [
        "repository-analysis",
        "code-context-generation",
        "file-structure-mapping",
        "dependency-analysis"
      ]
    },
    "GitKraken": {
      "command": "gk",
      "args": ["mcp"],
      "description": "GitKraken CLI MCP server for GitKraken, GitHub, GitLab, and Jira integration",
      "capabilities": [
        "git-repository-management",
        "github-integration",
        "gitlab-integration",
        "jira-integration",
        "issue-tracking",
        "pull-request-management",
        "code-review-workflows"
      ]
    }
  }
