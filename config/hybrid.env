# brAInwav Cortex-OS Hybrid Model Environment Configuration
# MLX-first routing with Ollama Cloud conjunction strategy

# =================================
# Company Branding
# =================================
CORTEX_COMPANY=brAInwav
CORTEX_LOG_PREFIX="brAInwav Cortex-OS:"
CORTEX_COMMIT_ATTRIBUTION="Co-authored-by: brAInwav Development Team"

# =================================
# Hybrid Strategy Configuration
# =================================
CORTEX_HYBRID_MODE=performance
CORTEX_MLX_FIRST_PRIORITY=100
CORTEX_PRIVACY_MODE=false
CORTEX_CONJUNCTION_ENABLED=true
CORTEX_PARALLEL_VERIFICATION=true
CORTEX_SEQUENTIAL_ENHANCEMENT=true
CORTEX_SPECIALIZED_DELEGATION=true
CORTEX_CONSENSUS_VOTING=false

# =================================
# MLX Configuration (Priority 100)
# =================================
MLX_BASE_URL=http://localhost:8081
MLX_CACHE_DIR=/Volumes/ExternalSSD/ai-cache/huggingface
MLX_MODEL_PATH=/Volumes/ExternalSSD/ai-models
MLX_HOST_URL=http://host.docker.internal:8081
HF_HOME=/Volumes/ExternalSSD/ai-cache/huggingface
MLX_EMBED_BASE_URL=http://localhost:8081

# MLX Model Validation
MLX_REQUIRED_MODELS="glm-4.5,qwen2.5-vl,gemma-2-2b,smollm-135m,gemma-3-270m,qwen3-embedding-4b,qwen3-reranker-4b"
MLX_PRIMARY_MODEL=glm-4.5
MLX_VISION_MODEL=qwen2.5-vl
MLX_EMBEDDING_MODEL=qwen3-embedding-4b
MLX_RERANKER_MODEL=qwen3-reranker-4b
MLX_ALWAYS_ON_MODEL=gemma-3-270m

# =================================
# Ollama Configuration
# =================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_URL=http://localhost:11434
OLLAMA_CLOUD_ENABLED=true
OLLAMA_CLOUD_SIGNIN_REQUIRED=true

# Ollama Local Models
OLLAMA_REQUIRED_MODELS="deepseek-coder:6.7b,qwen3-coder:30b,gpt-oss:20b,phi4-mini-reasoning,gemma3n:e4b,nomic-embed-text:v1.5,granite-embedding:278m"

# Ollama Cloud Models
OLLAMA_CLOUD_MODELS="qwen3-vl:235b-cloud,qwen3-coder:480b-cloud,gpt-oss:120b-cloud,deepseek-v3.1:671b-cloud,glm-4.6:cloud"
OLLAMA_CLOUD_PRIMARY=qwen3-coder:480b-cloud
OLLAMA_CLOUD_VISION_MODEL=qwen3-vl:235b-cloud
OLLAMA_CLOUD_CONTEXT_THRESHOLD=100000
OLLAMA_CLOUD_COMPLEXITY_THRESHOLD=enterprise

# =================================
# Model Gateway Configuration
# =================================
MODEL_GATEWAY_PORT=8080
MODEL_GATEWAY_URL=http://localhost:8080
MODEL_GATEWAY_TIMEOUT=30000
MODEL_GATEWAY_MAX_CONCURRENT=4
MODEL_GATEWAY_AUTO_PULL=true
MODEL_GATEWAY_RETRY_ATTEMPTS=3

# =================================
# Orchestration Package Configuration
# =================================
ORCHESTRATION_MLX_MODELS_COUNT=7
ORCHESTRATION_PRIMARY_MODEL=glm-4.5
ORCHESTRATION_VISION_MODEL=qwen2.5-vl
ORCHESTRATION_VISION_CLOUD_MODEL=qwen3-vl:235b-cloud
ORCHESTRATION_EMBEDDING_MODEL=qwen3-embedding-4b
ORCHESTRATION_RERANKER_MODEL=qwen3-reranker-4b
ORCHESTRATION_LIGHTWEIGHT_MODEL=gemma-3-270m
ORCHESTRATION_BALANCED_MODEL=gemma-2-2b
ORCHESTRATION_ULTRA_LIGHT_MODEL=smollm-135m

# =================================
# Health Check Configuration
# =================================
MLX_HEALTH_URL=http://localhost:8081/health
OLLAMA_HEALTH_URL=http://localhost:11434/api/tags
MODEL_GATEWAY_HEALTH_URL=http://localhost:8080/health
HEALTH_CHECK_INTERVAL=10
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=3

# =================================
# Task Routing Configuration
# =================================
TASK_ROUTE_QUICK_FIX=glm-4.5
TASK_ROUTE_CODE_GENERATION=glm-4.5
TASK_ROUTE_REFACTORING=glm-4.5
TASK_ROUTE_DEBUGGING=glm-4.5
TASK_ROUTE_DOCUMENTATION=glm-4.5
TASK_ROUTE_VISION_TASKS=qwen2.5-vl
TASK_ROUTE_UI_ANALYSIS=qwen2.5-vl
TASK_ROUTE_VISION_CLOUD=qwen3-vl:235b-cloud
TASK_ROUTE_ADVANCED_VISION=qwen3-vl:235b-cloud
TASK_ROUTE_UTILITY_TASKS=gemma-3-270m
TASK_ROUTE_FAST_RESPONSES=gemma-3-270m
TASK_ROUTE_SIMPLE_FIXES=smollm-135m
TASK_ROUTE_TESTING=smollm-135m
TASK_ROUTE_GENERAL_PURPOSE=gemma-2-2b
TASK_ROUTE_CODE_REVIEW=gemma-2-2b
TASK_ROUTE_DOCUMENTATION_SYNTHESIS=glm-4.6:cloud
TASK_ROUTE_GENERAL_REASONING=glm-4.6:cloud
TASK_ROUTE_ALWAYS_AVAILABLE=gemma-3-270m
TASK_ROUTE_DEFAULT=glm-4.5

# Cloud conjunction routing
TASK_ROUTE_MASSIVE_CONTEXT=qwen3-coder:480b-cloud
TASK_ROUTE_REPOSITORY_ANALYSIS=qwen3-coder:480b-cloud
TASK_ROUTE_ENTERPRISE_ARCHITECTURE=qwen3-coder:480b-cloud
TASK_ROUTE_COMPLEX_ANALYSIS=qwen3-coder:480b-cloud

# =================================
# Performance Configuration
# =================================
PERFORMANCE_TIER_ULTRA_FAST="gemma-3-270m,smollm-135m"
PERFORMANCE_TIER_BALANCED="gemma-2-2b,qwen2.5-vl"
PERFORMANCE_TIER_HIGH_PERFORMANCE="glm-4.5,qwen3-vl:235b-cloud"
PERFORMANCE_MAX_LATENCY_ULTRA=500
PERFORMANCE_MAX_LATENCY_BALANCED=2000
PERFORMANCE_MAX_LATENCY_HIGH=5000

# =================================
# Deployment Configuration
# =================================
DEPLOYMENT_READY=true
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_VALIDATION_REQUIRED=true
DEPLOYMENT_HEALTH_CHECKS_ENABLED=true
DEPLOYMENT_MONITORING_ENABLED=true
