{
    "name": "@cortex-os/local-memory",
    "version": "0.1.0",
    "type": "module",
    "private": true,
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./auth": {
            "types": "./dist/auth/index.d.ts",
            "import": "./dist/auth/index.js"
        },
        "./telemetry": {
            "types": "./dist/observability/index.d.ts",
            "import": "./dist/observability/index.js"
        },
        "./license": {
            "types": "./dist/license/index.d.ts",
            "import": "./dist/license/index.js"
        }
    },
    "bin": {
        "cortex-memory-eval": "./dist/cli/local-eval.js",
        "cortex-license": "./dist/cli/license-manager.js",
        "local-memory-service": "./dist/server.js"
    },
    "scripts": {
        "dev": "tsc --watch",
        "build": "tsc",
        "start": "node ./dist/server.js",
        "lint": "eslint . --ext .ts",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:safe": "node ../../../../scripts/vitest-safe.mjs run",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "eval": "node ./dist/cli/local-eval.js",
        "eval:ragas": "node ./dist/cli/local-eval.js ragas",
        "eval:gdpr": "node ./dist/cli/local-eval.js gdpr",
        "license": "node ./dist/cli/license-manager.js",
        "license:info": "node ./dist/cli/license-manager.js info --validate",
        "license:check": "node ./dist/cli/license-manager.js check-1password"
    },
    "dependencies": {
        "@cortex-os/memories": "workspace:*",
        "@cortex-os/telemetry": "workspace:*",
        "@cortex-os/contracts": "workspace:*",
        "@cortex-os/utils": "workspace:*",
        "@cortex-os/memory-core": "workspace:*",
        "@cortex-os/tool-spec": "workspace:*",
        "@opentelemetry/api": "^1.9.0",
        "@opentelemetry/instrumentation": "^0.45.0",
        "compression": "^1.7.5",
        "cors": "^2.8.5",
        "express": "^4.21.1",
        "helmet": "^7.2.0",
        "pino": "^10.0.0",
        "zod": "^3.25.76",
        "commander": "^12.0.0"
    },
    "devDependencies": {
        "@types/node": "^22.18.1",
        "@vitest/coverage-v8": "^3.2.4",
        "eslint": "^9.35.0",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4",
        "@types/commander": "^2.12.2",
        "@types/express": "^4.17.21",
        "@types/cors": "^2.8.17",
        "@types/compression": "^1.7.5"
    }
}