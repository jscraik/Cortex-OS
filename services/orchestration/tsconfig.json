{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "types": [
      "vitest/globals"
    ],
    "moduleResolution": "NodeNext",
    "ignoreDeprecations": "6.0"
