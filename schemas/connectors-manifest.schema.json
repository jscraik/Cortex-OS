{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.cortex.brainwav.ai/connectors-manifest.schema.json",
  "title": "ConnectorsManifest",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "manifestVersion", "connectors"],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri-reference",
      "description": "Optional schema reference pointer for tooling."
    },
    "id": {
      "type": "string",
      "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$",
      "description": "ULID identifying this manifest instance."
    },
    "brand": {
      "type": "string",
      "enum": ["brAInwav"],
      "description": "Brand marker propagated to downstream payloads."
    },
    "manifestVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the manifest definition."
    },
    "schemaVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Version of the connectors manifest schema."
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp describing when the manifest snapshot was produced."
    },
    "ttlSeconds": {
      "type": "integer",
      "minimum": 1,
      "description": "Default TTL applied to derived service-map responses."
    },
    "metadata": {
      "type": "object",
      "description": "Additional manifest metadata surfaced to operators.",
      "additionalProperties": true
    },
    "connectors": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/ConnectorEntry"
      }
    }
  },
  "$defs": {
    "AuthHeader": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "value"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "HTTP header name used for authentication."
        },
        "value": {
          "type": "string",
          "minLength": 1,
          "description": "Header value placeholder or env substitution token."
        }
      }
    },
    "Authentication": {
      "type": "object",
      "additionalProperties": false,
      "required": ["headers"],
      "properties": {
        "headers": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/AuthHeader" }
        }
      }
    },
    "ConnectorAuth": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["apiKey", "bearer", "none"],
          "description": "Authentication strategy required by the connector."
        },
        "headerName": {
          "type": "string",
          "minLength": 1,
          "description": "HTTP header name invoked for apiKey/bearer auth."
        }
      }
    },
    "ConnectorQuotas": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "perMinute": { "type": "integer", "minimum": 0 },
        "perHour": { "type": "integer", "minimum": 0 },
        "perDay": { "type": "integer", "minimum": 0 },
        "concurrent": { "type": "integer", "minimum": 0 },
        "per_minute": { "type": "integer", "minimum": 0 },
        "per_hour": { "type": "integer", "minimum": 0 },
        "per_day": { "type": "integer", "minimum": 0 }
      }
    },
    "ConnectorEntry": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "name",
        "version",
        "endpoint",
        "auth",
        "scopes",
        "ttlSeconds"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9][a-z0-9-]{1,62}$",
          "description": "Stable connector identifier."
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable connector name."
        },
        "displayName": {
          "type": "string",
          "minLength": 1,
          "description": "Optional UI display name."
        },
        "version": {
          "type": "string",
          "minLength": 1,
          "description": "Semantic version or snapshot identifier."
        },
        "description": {
          "type": "string",
          "description": "Optional connector description."
        },
        "endpoint": {
          "type": "string",
          "format": "uri",
          "description": "HTTPS endpoint exposing the connector surface."
        },
        "auth": { "$ref": "#/$defs/ConnectorAuth" },
        "authentication": { "$ref": "#/$defs/Authentication" },
        "headers": {
          "type": "object",
          "additionalProperties": { "type": "string" },
          "description": "Static headers attached to outbound requests."
        },
        "scopes": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "minItems": 1,
          "uniqueItems": true,
          "description": "Scopes required by the connector."
        },
        "quotas": { "$ref": "#/$defs/ConnectorQuotas" },
        "timeouts": {
          "type": "object",
          "additionalProperties": { "type": "integer", "minimum": 0 },
          "description": "Optional timeout configuration expressed in milliseconds."
        },
        "status": {
          "type": "string",
          "enum": ["enabled", "disabled", "preview"],
          "description": "Legacy status indicator."
        },
        "enabled": {
          "type": "boolean",
          "description": "Explicit enablement flag overriding status."
        },
        "ttlSeconds": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of seconds the connector remains valid."
        },
        "metadata": {
          "type": "object",
          "additionalProperties": true,
          "description": "Extra metadata surfaced to clients."
        },
        "tags": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "description": "Optional connector tags."
        }
      }
    }
  }
}
