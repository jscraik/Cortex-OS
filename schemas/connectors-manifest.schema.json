{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$title": "ConnectorsManifest",
  "$ref": "#/definitions/ConnectorsManifest",
  "definitions": {
    "ConnectorsManifest": {
      "type": "object",
      "properties": {
        "brand": {
          "type": "string",
          "const": "brAInwav"
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "ttlSeconds": {
          "type": "integer",
          "exclusiveMinimum": 0
        },
        "connectors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "displayName": {
                "type": "string",
                "minLength": 1
              },
              "version": {
                "type": "string",
                "minLength": 1
              },
              "endpoint": {
                "type": "string",
                "format": "uri"
              },
              "auth": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": [
                      "apiKey",
                      "bearer",
                      "none"
                    ]
                  },
                  "headerName": {
                    "type": "string",
                    "minLength": 1
                  },
                  "queryParam": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "required": [
                  "type"
                ],
                "additionalProperties": false
              },
              "scopes": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                },
                "minItems": 1
              },
              "quotas": {
                "type": "object",
                "properties": {
                  "perMinute": {
                    "type": "integer",
                    "exclusiveMinimum": 0
                  },
                  "perHour": {
                    "type": "integer",
                    "exclusiveMinimum": 0
                  },
                  "perDay": {
                    "type": "integer",
                    "exclusiveMinimum": 0
                  }
                },
                "required": [
                  "perMinute",
                  "perHour"
                ],
                "additionalProperties": false
              },
              "enabled": {
                "type": "boolean",
                "default": true
              },
              "metadata": {
                "type": "object",
                "properties": {
                  "brand": {
                    "type": "string",
                    "const": "brAInwav"
                  }
                },
                "required": [
                  "brand"
                ],
                "additionalProperties": {},
                "default": {
                  "brand": "brAInwav"
                }
              },
              "tags": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                },
                "minItems": 1
              },
              "timeouts": {
                "type": "object",
                "properties": {
                  "requestMs": {
                    "type": "integer",
                    "exclusiveMinimum": 0
                  },
                  "connectMs": {
                    "type": "integer",
                    "exclusiveMinimum": 0
                  }
                },
                "additionalProperties": false
              },
              "availability": {
                "type": "object",
                "properties": {
                  "target": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                  },
                  "requiresHeartbeat": {
                    "type": "boolean",
                    "default": false
                  }
                },
                "additionalProperties": false
              }
            },
            "required": [
              "id",
              "displayName",
              "version",
              "endpoint",
              "auth",
              "scopes",
              "quotas"
            ],
            "additionalProperties": false
          },
          "minItems": 1
        },
        "metadata": {
          "type": "object",
          "additionalProperties": {}
        }
      },
      "required": [
        "brand",
        "version",
        "ttlSeconds",
        "connectors"
      ],
      "additionalProperties": false
    }
  }
}