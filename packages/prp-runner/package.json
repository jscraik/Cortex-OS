{
  "name": "@cortex-os/prp-runner",
  "version": "1.0.0",
  "description": "Production-grade PRP Neural Orchestration Engine",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./orchestrator": "./dist/orchestrator.js",
    "./neurons": "./dist/neurons/index.js",
    "./tools": "./dist/tools/index.js",
    "./validation": "./dist/validation/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "NODE_OPTIONS='--expose-gc --max-old-space-size=1536' vitest run --pool=forks --no-file-parallelism --max-workers=1 --pool-options.forks.singleFork=true --pool-options.forks.maxForks=1",
    "test:memory:profile": "NODE_OPTIONS='--expose-gc --max-old-space-size=1536' vitest run tests/memory/**/*.test.ts --pool=forks --no-file-parallelism --max-workers=1 --pool-options.forks.singleFork=true --pool-options.forks.maxForks=1",
    "test:watch": "echo 'DISABLED: watch/UI mode blocked for memory safety'",
    "test:coverage": "vitest --coverage",
    "test:ci": "NODE_OPTIONS='--expose-gc --max-old-space-size=1536' vitest run --coverage --reporter=verbose --pool=forks --no-file-parallelism --max-workers=1 --pool-options.forks.singleFork=true --pool-options.forks.maxForks=1",
    "tdd:red": "echo 'DISABLED: watch/UI mode blocked for memory safety'",
    "tdd:green": "echo 'TDD Phase 2: Make test pass' && vitest run",
    "tdd:refactor": "echo 'DISABLED: watch/UI mode blocked for memory safety'",
    "gates:tdd": "NODE_OPTIONS='--expose-gc --max-old-space-size=1536' vitest run --coverage --reporter=dot --pool=forks --no-file-parallelism --max-workers=1 --pool-options.forks.singleFork=true --pool-options.forks.maxForks=1 && echo 'TDD gates passed: All tests pass with 85%+ coverage'",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "precommit": "pnpm gates:tdd && pnpm lint",
    "demo:semsearch": "tsx scripts/semantic-search-demo.ts",
    "demo:mcp": "tsx scripts/mcp-http-demo.ts",
    "test:safe": "NODE_OPTIONS='--expose-gc --max-old-space-size=1536' vitest run --pool=forks --no-file-parallelism --max-workers=1 --pool-options.forks.singleFork=true --pool-options.forks.maxForks=1"
  },
  "dependencies": {
    "@cortex-os/a2a": "workspace:*",
    "@cortex-os/a2a-contracts": "workspace:*",
    "@cortex-os/kernel": "workspace:*",
    "@langchain/core": "^0.3.32",
    "@langchain/langgraph": "0.4.9",
    "axe-core": "^4.9.1",
    "chalk": "^5.6.0",
    "chokidar": "^4.0.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "execa": "^9.6.0",
    "express": "^4.18.2",
    "fs-extra": "^11.3.1",
    "glob": "^10.4.2",
    "helmet": "^8.1.0",
    "inquirer": "^10.0.0",
    "lighthouse": "^11.4.0",
    "node-llama-cpp": "^3.1.0",
    "ollama": "^0.5.17",
    "ioredis": "^5.4.1",
    "ora": "^8.0.0",
    "semaphore-promise": "^1.4.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cortex-os/a2a": "workspace:*",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "4.17.21",
    "@types/supertest": "^2.0.16",
    "@vitest/coverage-v8": "^3.2.4",
    "@xenova/transformers": "^2.17.2",
    "eslint": "^9.35.0",
    "supertest": "^7.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "nx": {
    "targets": {
      "demo:semsearch": {
        "executor": "nx:run-commands",
        "options": {
          "command": "pnpm -C packages/prp-runner demo:semsearch"
        }
      },
      "demo:mcp": {
        "executor": "nx:run-commands",
        "options": {
          "command": "pnpm -C packages/prp-runner demo:mcp"
        }
      }
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ai",
    "orchestration",
    "neural",
    "prp",
    "cortex",
    "production"
  ],
  "author": "Cortex-OS Team",
  "license": "(Apache-2.0 OR Commercial)"
}
