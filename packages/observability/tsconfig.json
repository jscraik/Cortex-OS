{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": ".",
		"composite": true,
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		// Ensure modern package resolution for ESM packages with package.json exports
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"types": [
			"node"
		]
	},
	"include": [
		"src/**/*",
		"src/shims/**/*.d.ts",
		"tests/**/*"
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}