{
  "name": "@cortex-os/observability",
  "version": "1.0.0",
  "type": "module",
  "description": "OTEL spans, metrics, logs with ULID propagation for Cortex-OS",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./tracing": {
      "types": "./dist/tracing/index.d.ts",
      "import": "./dist/tracing/index.js"
    },
    "./metrics": {
      "types": "./dist/metrics/index.d.ts",
      "import": "./dist/metrics/index.js"
    },
    "./logging": {
      "types": "./dist/logging/index.d.ts",
      "import": "./dist/logging/index.js"
    },
    "./flamegraph": {
      "types": "./dist/flamegraph.d.ts",
      "import": "./dist/flamegraph.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node ../../scripts/vitest-safe.mjs run",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test:safe": "node ../../scripts/vitest-safe.mjs run"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.64.0",
    "@opentelemetry/exporter-jaeger": "^2.1.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.205.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.205.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-metrics": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.205.0",
    "@opentelemetry/sdk-trace-base": "^2.1.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "pino": "^10.0.0",
    "ulid": "^2.3.0",
    "zod": "^3.25.76",
    "@cortex-os/a2a-contracts": "workspace:*",
    "@cortex-os/a2a-core": "workspace:*",
    "@cortex-os/protocol": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.18.1",
    "eslint": "^9.35.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}