{
  "name": "@cortex-os/proof-artifacts",
  "version": "0.1.0",
  "description": "Proof artifact envelope tooling for Cortex-OS",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "bin": {
    "cortex-proofs": "./dist/cli/cortex-proofs.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "dev": "tsc -p tsconfig.json --watch",
    "lint": "eslint src/**/*.ts",
    "test": "node ../../scripts/vitest-safe.mjs run -c vitest.config.ts",
    "test:coverage": "vitest run -c vitest.config.ts --coverage",
    "verify": "node dist/cli/cortex-proofs.js verify",
    "sign": "node dist/cli/cortex-proofs.js sign"
  },
  "dependencies": {
    "@sigstore/sign": "^3.0.0",
    "@sigstore/verify": "^3.0.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "commander": "^12.1.0",
    "type-fest": "^4.33.0",
    "ulidx": "^2.4.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.18.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "cortex-os",
    "proof",
    "attestation",
    "sigstore",
    "slsa"
  ],
  "author": "Cortex-OS Team",
  "license": "(Apache-2.0 OR Commercial)"
}
