{
  "name": "@cortex-os/kernel",
  "version": "1.0.0",
  "description": "Deterministic kernel for Cortex-OS with LangGraph state management",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./kernel": {
      "types": "./dist/graph-simple.d.ts",
      "import": "./dist/graph-simple.js",
      "require": "./dist/graph-simple.js"
    },
    "./state": {
      "types": "./dist/state.d.ts",
      "import": "./dist/state.js",
      "require": "./dist/state.js"
    },
    "./nodes": {
      "types": "./dist/nodes/index.d.ts",
      "import": "./dist/nodes/index.js",
      "require": "./dist/nodes/index.js"
    },
    "./mcp": {
      "types": "./dist/mcp/adapter.d.ts",
      "import": "./dist/mcp/adapter.js",
      "require": "./dist/mcp/adapter.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node ../../scripts/vitest-safe.mjs run",
    "test:watch": "echo 'DISABLED: watch/UI mode blocked for memory safety'",
    "test:coverage": "vitest --coverage",
    "test:ci": "node ../../scripts/vitest-safe.mjs run --coverage --reporter=verbose",
    "gates:determinism": "node ../../scripts/vitest-safe.mjs run tests/determinism.test.ts --reporter=dot",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "test:safe": "node ../../scripts/vitest-safe.mjs run"
  },
  "dependencies": {
    "@cortex-os/hooks": "workspace:*",
    "@cortex-os/orchestration": "workspace:*",
    "@cortex-os/prp-types": "workspace:*",
    "zod": "^3.25.76",
    "@cortex-os/proof-artifacts": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.18.1",
    "@types/bun": "1.1.13",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.35.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "cortex-os",
    "kernel",
    "langgraph",
    "deterministic",
    "mcp",
    "prp"
  ],
  "author": "Cortex-OS Team",
  "license": "(Apache-2.0 OR Commercial)"
}