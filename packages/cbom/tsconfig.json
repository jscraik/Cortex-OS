{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "lib": [
      "es2022"
    ],
    "resolveJsonModule": true,
    "strict": true,
    "types": [
      "node",
      "vitest/globals"
    ],
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "cli/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "dist",
    "coverage"
  ]
}