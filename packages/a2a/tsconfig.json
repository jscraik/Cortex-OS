{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": [
      "node"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "../..",
    "outDir": "dist",
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ],
  "references": [
    {
      "path": "a2a-contracts"
    },
    {
      "path": "a2a-core"
    },
    {
      "path": "a2a-events"
    },
    {
      "path": "a2a-transport"
    },
    {
      "path": "../../libs/typescript/contracts"
    },
    {
      "path": "../observability"
    },
    {
      "path": "../../libs/typescript/telemetry"
    },
    {
      "path": "../../libs/typescript/utils"
    }
  ]
}
