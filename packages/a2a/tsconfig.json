{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": [
      "node"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "../..",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@cortex-os/contracts": [
        "../../libs/typescript/contracts/dist/src/index.d.ts"
      ],
      "@cortex-os/a2a-transport/stdio": [
        "a2a-transport/dist/stdio.d.ts"
      ],
      "@cortex-os/a2a-transport/stdio.js": [
        "a2a-transport/dist/stdio.d.ts"
      ],
      "@cortex-os/a2a-transport/*": [
        "a2a-transport/dist/*"
      ],
      "@cortex-os/observability": [
        "../observability/dist/index.d.ts",
        "../observability/src/index.ts"
      ],
      "@cortex-os/telemetry": [
        "../../libs/typescript/telemetry/dist/index.d.ts"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}
