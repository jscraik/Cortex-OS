{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "moduleResolution": "NodeNext",
    "ignoreDeprecations": "5.0",
    "module": "NodeNext"
  },
  "include": [
    "src/**/*.ts",
    "cli/**/*.ts",
    "src/__tests__/**/*.ts"
  ],
  "exclude": [
    "dist",
    "**/*.spec.tsx"
  ]
}
