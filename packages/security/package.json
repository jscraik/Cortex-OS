{
  "name": "@cortex-os/security",
  "version": "0.1.0",
  "description": "brAInwav security implementation with policy engine, egress proxy, and SPIFFE/SPIRE workload identity",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./policy": {
      "types": "./dist/policy/index.d.ts",
      "import": "./dist/policy/index.js"
    },
    "./spiffe": {
      "types": "./dist/spiffe/index.d.ts",
      "import": "./dist/spiffe/index.js"
    },
    "./mtls": {
      "types": "./dist/mtls/index.d.ts",
      "import": "./dist/mtls/index.js"
    },
    "./workload-identity": {
      "types": "./dist/workload-identity/index.d.ts",
      "import": "./dist/workload-identity/index.js"
    }
  },
  "bin": {
    "brainwav-egress-proxy": "./dist/egress-proxy.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/spiffe/index.ts src/mtls/index.ts src/workload-identity/index.ts src/policy/index.ts src/egress-proxy.ts --dts --format esm --clean",
    "dev": "tsup src/index.ts src/spiffe/index.ts src/mtls/index.ts src/workload-identity/index.ts src/policy/index.ts src/egress-proxy.ts --dts --format esm --clean --watch",
    "lint": "eslint src/**/*.ts",
    "test": "node ../../scripts/vitest-safe.mjs run",
    "test:capabilities": "node ../../scripts/vitest-safe.mjs run --config vitest.capabilities.config.ts",
    "test:watch": "node ../../scripts/vitest-safe.mjs run",
    "test:coverage": "node ../../scripts/vitest-safe.mjs run --coverage",
    "semgrep": "semgrep scan --config=semgrep.yml --severity=WARNING --sarif -o semgrep.sarif .",
    "test:safe": "node ../../scripts/vitest-safe.mjs run"
  },
  "keywords": [
    "security",
    "spiffe",
    "spire",
    "mtls",
    "workload-identity",
    "zero-trust"
  ],
  "dependencies": {
    "@cortex-os/a2a-contracts": "workspace:*",
    "@cortex-os/a2a-core": "workspace:*",
    "@cortex-os/a2a-transport": "workspace:*",
    "@cortex-os/telemetry": "workspace:*",
    "@open-policy-agent/opa-wasm": "^1.6.0",
    "express": "^4.18.2",
    "pino": "^9.5.0",
    "undici": "^5.28.4",
    "yaml": "^2.8.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cortex-os/mcp-core": "workspace:*",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-trace-base": "^2.1.0",
    "@types/node": "^22.18.1",
    "eslint": "^9.35.0",
    "tsup": "8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@cortex-os/a2a-core": "workspace:*"
  }
}
