{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "ignoreDeprecations": "5.0",
    "emitDeclarationOnly": false,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "test/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
