    "@prisma/client": "5.22.0",
    "@qdrant/js-client-rest": "^1.15.1",
    "better-sqlite3": "^11.10.0",
    "circuit-breaker-js": "^0.0.1",
    "js-yaml": "^4.1.0",
    "p-queue": "^7.4.1",
    "pino": "^10.0.0",
    "sqlite-vec": "^0.1.7-alpha.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.18.1",
    "@vitest/coverage-v8": "^3.2.4",
    "tsx": "^4.19.1",
    "typescript": "^5.9.2",
