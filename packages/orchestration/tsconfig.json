{
  "extends": "../../tsconfig.base.json",
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "examples/**",
    "src/lib/outbox/**",
    "tests/**",
    "__tests__/**",
    "src/**/__tests__/**",
    "src/**/tests/**",
    "src/lib/supervisor.ts"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "declaration": true,
    "composite": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
  "moduleResolution": "NodeNext",
  "module": "NodeNext"
  },
  "references": [
    {
      "path": "../../packages/hooks"
    },
    {
      "path": "../../packages/prompts"
    },
    {
      "path": "../../packages/commands"
    },
    {
      "path": "../../packages/kernel"
    },
    {
      "path": "../../packages/cortex-sec"
    },
    {
      "path": "../../packages/observability"
    },
    {
      "path": "../../packages/proof-artifacts"
    },
    {
      "path": "../../packages/a2a/a2a-contracts"
    },
    {
      "path": "../../libs/typescript/agent-contracts"
    },
    {
      "path": "../../libs/typescript/utils"
    }
  ]
}