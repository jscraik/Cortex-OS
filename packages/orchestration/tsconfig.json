{
  "extends": "../../tsconfig.json",
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "examples/**",
    "src/lib/outbox/**",
    "tests/**",
    "__tests__/**",
    "src/**/__tests__/**",
    "src/**/tests/**",
    "src/lib/supervisor.ts"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "declaration": true,
    "composite": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "moduleResolution": "NodeNext",
    "ignoreDeprecations": "5.0",
    "module": "NodeNext"
  },
  "references": [
    {
      "path": "../../packages/hooks"
    }
  ]
}
