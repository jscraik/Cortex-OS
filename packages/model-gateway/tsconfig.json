{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "composite": true,
    "noEmit": false,
    "module": "NodeNext",
    "target": "es2022",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "tests/**/*"
  ],
  "references": [
    {
      "path": "../a2a/a2a-contracts"
    },
    {
      "path": "../a2a/a2a-core"
    },
    {
      "path": "../a2a/a2a-transport"
    },
    {
      "path": "../mcp-core"
    },
    {
      "path": "../mcp-bridge"
    }
  ]
}
