    "sourceRoot": "packages/mcp-bridge/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "outputs": [
                "{projectRoot}/dist"
            ],
            "options": {
                "command": "pnpm run build",
