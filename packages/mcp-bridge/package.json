{
  "name": "@cortex-os/mcp-bridge",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./stdio-http": {
      "import": "./dist/stdio-http.js",
      "types": "./dist/stdio-http.d.ts"
    },
    "./rate-limiter": {
      "import": "./dist/rate-limiter.js",
      "types": "./dist/rate-limiter.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "node ../../scripts/vitest-safe.mjs run",
    "test:watch": "echo 'DISABLED: watch/UI mode blocked for memory safety'",
    "test:coverage": "node ../../scripts/vitest-safe.mjs run --coverage",
    "test:safe": "node ../../scripts/vitest-safe.mjs run",
    "test:mcp:smoke": "node ../../scripts/vitest-safe.mjs run mcp-smoke.test.ts"
  },
  "dependencies": {
    "@cortex-os/mcp-core": "workspace:*",
    "@cortex-os/evidence-runner": "workspace:*",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.18.1",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  }
}
