{
  "name": "@cortex-os/mcp-bridge",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./stdio-http": {
      "import": "./dist/stdio-http.js",
      "types": "./dist/stdio-http.d.ts"
    },
    "./rate-limiter": {
      "import": "./dist/rate-limiter.js",
      "types": "./dist/rate-limiter.d.ts"
    },
    "./runtime/transport": {
      "import": "./dist/runtime/transport.js",
      "types": "./dist/runtime/transport.d.ts"
    },
    "./runtime/telemetry/metrics": {
      "import": "./dist/runtime/telemetry/metrics.js",
      "types": "./dist/runtime/telemetry/metrics.d.ts"
    },
    "./runtime/telemetry/metrics-server": {
      "import": "./dist/runtime/telemetry/metrics-server.js",
      "types": "./dist/runtime/telemetry/metrics-server.d.ts"
    },
    "./runtime/telemetry/tracing": {
      "import": "./dist/runtime/telemetry/tracing.js",
      "types": "./dist/runtime/telemetry/tracing.d.ts"
    },
    "./runtime/remote-proxy": {
      "import": "./dist/runtime/remote-proxy.js",
      "types": "./dist/runtime/remote-proxy.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "node ../../scripts/vitest-safe.mjs run",
    "test:watch": "echo 'DISABLED: watch/UI mode blocked for memory safety'",
    "test:coverage": "node ../../scripts/vitest-safe.mjs run --coverage",
    "test:safe": "node ../../scripts/vitest-safe.mjs run",
    "test:mcp:smoke": "node ../../scripts/vitest-safe.mjs run mcp-smoke.test.ts"
  },
  "dependencies": {
    "@cortex-os/mcp-core": "workspace:*",
    "@cortex-os/evidence-runner": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.206.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.206.0",
    "@opentelemetry/semantic-conventions": "^1.25.1",
    "prom-client": "^15.1.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.18.1",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  }
}
