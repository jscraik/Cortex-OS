{
  "name": "@cortex-os/workflow-dashboard",
  "version": "1.0.0",
  "description": "brAInwav Cortex-OS workflow dashboard with real-time updates",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
