{
  "name": "@cortex-os/rag-contracts",
  "version": "0.1.0",
  "description": "Shared type contracts between RAG and agents packages",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./events": {
      "types": "./dist/events.d.ts",
      "import": "./dist/events.js"
    },
    "./workflow": {
      "types": "./dist/workflow.d.ts",
      "import": "./dist/workflow.js"
    },
    "./mcp-client": {
      "types": "./dist/mcp-client.d.ts",
      "import": "./dist/mcp-client.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "echo 'No tests yet'",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@cortex-os/a2a-contracts": "workspace:*",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.18.1",
    "eslint": "^9.35.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "cortex-os",
    "rag",
    "contracts",
    "types"
  ],
