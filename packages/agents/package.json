{
  "name": "@cortex-os/agents",
  "version": "0.1.0",
  "description": "brAInwav Cortex-OS Native Agent System",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env ./src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:watch": "vitest --watch",
    "test:integration": "vitest tests/integration",
    "test:tdd": "vitest tests/integration/tdd-plan-implementation.test.ts",
    "test:coverage": "vitest --coverage",
    "health:check": "node -e \"import('./dist/lib/health-check.js').then(h => h.healthMonitor.getHealthStatus().then(s => console.log('brAInwav Health:', s)))\"",
    "observability:export": "node -e \"import('./dist/lib/observability.js').then(o => console.log('brAInwav Observability:', o.observability.export()))\"",
    "lint": "biome check ./src",
    "lint:fix": "biome check --write ./src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@cortex-os/a2a-contracts": "workspace:*",
    "@cortex-os/a2a-core": "workspace:*",
    "@cortex-os/hooks": "workspace:*",
    "@cortex-os/model-gateway": "workspace:*",
    "@hono/node-server": "^1.19.3",
    "@langchain/core": "^0.3.32",
    "@langchain/langgraph": "0.4.9",
    "@opentelemetry/api": "^1.7.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.0",
    "hono": "^4.0.0",
    "jose": "^5.10.0",
    "pino": "^9.0.0",
    "prom-client": "^15.0.0",
    "yaml": "^2.8.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@types/node": "^22.18.1",
    "@types/supertest": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "msw": "^2.0.0",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
