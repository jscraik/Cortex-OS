{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../..",
    "baseUrl": "../..",
    "noEmit": false,
    "composite": true,
    "moduleResolution": "NodeNext",
    "ignoreDeprecations": "5.0",
    "module": "NodeNext",
    "paths": {
      "@cortex-os/a2a-contracts": ["packages/a2a/a2a-contracts/src"],
      "@cortex-os/a2a-contracts/*": ["packages/a2a/a2a-contracts/src/*"],
      "@cortex-os/a2a-core": ["packages/a2a/a2a-core/src"],
      "@cortex-os/a2a-core/*": ["packages/a2a/a2a-core/src/*"],
      "@cortex-os/agent-toolkit": ["packages/agent-toolkit/src"],
      "@cortex-os/agent-toolkit/*": ["packages/agent-toolkit/src/*"],
      "@cortex-os/mcp-core": ["packages/mcp/mcp-core/src"],
      "@cortex-os/mcp-core/*": ["packages/mcp/mcp-core/src/*"],
      "@cortex-os/mcp-bridge": ["packages/mcp-bridge/src"],
      "@cortex-os/mcp-bridge/*": ["packages/mcp-bridge/src/*"],
      "@cortex-os/mcp-registry": ["packages/mcp-registry/src"],
      "@cortex-os/mcp-registry/*": ["packages/mcp-registry/src/*"],
      "@cortex-os/orchestration": ["packages/orchestration/src"],
      "@cortex-os/orchestration/*": ["packages/orchestration/src/*"],
      "@cortex-os/memories": ["packages/memories/src"],
      "@cortex-os/memories/*": ["packages/memories/src/*"],
      "@cortex-os/rag": ["packages/rag/src"],
      "@cortex-os/rag/*": ["packages/rag/src/*"],
      "@cortex-os/agents": ["packages/agents/src"],
      "@cortex-os/agents/*": ["packages/agents/src/*"],
      "@cortex-os/hooks": ["packages/hooks/src"],
      "@cortex-os/hooks/*": ["packages/hooks/src/*"],
      "@cortex-os/memory-core": ["packages/memory-core/src"],
      "@cortex-os/memory-core/*": ["packages/memory-core/src/*"],
      "@cortex-os/model-gateway": ["packages/model-gateway/src"],
      "@cortex-os/model-gateway/*": ["packages/model-gateway/src/*"],
      "@cortex-os/observability": ["packages/observability/src"],
      "@cortex-os/observability/*": ["packages/observability/src/*"],
      "@cortex-os/asbr": ["packages/asbr/src"],
      "@cortex-os/asbr/*": ["packages/asbr/src/*"],
      "@cortex-os/cortex-os": ["apps/cortex-os/src"],
      "@cortex-os/cortex-os/*": ["apps/cortex-os/src/*"],
      "@cortex-os/prompts": ["packages/prompts/src"],
      "@cortex-os/prompts/*": ["packages/prompts/src/*"],
      "@cortex-os/protocol": ["packages/protocol/src"],
      "@cortex-os/protocol/*": ["packages/protocol/src/*"],
      "@cortex-os/simlab": ["packages/simlab/src"],
      "@cortex-os/simlab/*": ["packages/simlab/src/*"],
      "@cortex-types/*": ["libs/typescript/*/src"],
      "@cortex-utils/*": ["libs/*/src"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "../a2a/a2a-contracts"
    },
    {
      "path": "../a2a/a2a-core"
    },
    {
      "path": "../hooks"
    },
    {
      "path": "../model-gateway"
    },
    {
      "path": "../observability"
    },
    {
      "path": "../orchestration"
    },
    {
      "path": "../protocol"
    }
  ]
}
