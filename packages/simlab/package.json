{
  "name": "@cortex-os/simlab",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./runner": {
      "types": "./dist/runner.d.ts",
      "import": "./dist/runner.js"
    },
    "./agent-adapter": {
      "types": "./dist/agent-adapter.d.ts",
      "import": "./dist/agent-adapter.js"
    },
    "./judge": {
      "types": "./dist/judge.d.ts",
      "import": "./dist/judge.js"
    },
    "./report": {
      "types": "./dist/report.d.ts",
      "import": "./dist/report.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    },
    "./user-sim": {
      "types": "./dist/user-sim.d.ts",
      "import": "./dist/user-sim.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx watch src/index.ts",
    "simlab:smoke": "tsx src/scripts/run-smoke.ts",
    "simlab:critical": "tsx src/scripts/run-critical.ts",
    "simlab:full": "tsx src/scripts/run-full.ts",
    "simlab:report": "tsx src/scripts/generate-report.ts",
    "simlab:gates": "tsx src/scripts/check-gates.ts",
    "sim:status": "tsx src/scripts/status.ts",
    "test:safe": "node ../../scripts/vitest-safe.mjs run"
  },
  "dependencies": {
    "@cortex-os/a2a-contracts": "workspace:*",
    "@cortex-os/a2a-core": "workspace:*",
    "@cortex-os/a2a-transport": "workspace:*",
    "@cortex-os/kernel": "workspace:*",
    "@cortex-os/prp-runner": "workspace:*",
    "@cortex-os/prp-types": "workspace:*"
  }
}