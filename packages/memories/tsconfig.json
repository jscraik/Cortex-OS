{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "types": [
      "node"
    ],
    "composite": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "dist",
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "src",
    "prisma",
    "tests/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/tools"
  ],
  "references": [
    {
      "path": "../a2a"
    },
    {
      "path": "../a2a/a2a-contracts"
    },
    {
      "path": "../a2a/a2a-core"
    },
    {
      "path": "../a2a/a2a-transport"
    },
    {
      "path": "../../libs/typescript/contracts"
    },
    {
      "path": "../../libs/typescript/utils"
    },
    {
      "path": "../rag"
    }
  ]
}
