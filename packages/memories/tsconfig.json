{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "types": [
      "node"
    ],
    "composite": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "dist",
    "ignoreDeprecations": "6.0"
  },
  "include": [
    "src",
    "prisma",
    "tests/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/tools"
  ]
}
