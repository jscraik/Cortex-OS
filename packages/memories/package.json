{
  "name": "@cortex-os/memories",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "test": "node ../../scripts/vitest-safe.mjs run",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prisma:gen": "prisma generate --schema=./prisma/schema.prisma",
    "db:migrate": "prisma migrate deploy --schema=./prisma/schema.prisma",
    "test:coverage": "vitest --coverage",
    "jsonl:import": "tsx src/tools/jsonl-to-memory.ts",
    "test:safe": "node ../../scripts/vitest-safe.mjs run",
    "migration": "tsx src/tools/migration-cli.ts",
    "migration:status": "tsx src/tools/migration-cli.ts status",
    "migration:up": "tsx src/tools/migration-cli.ts migrate",
    "migration:rollback": "tsx src/tools/migration-cli.ts rollback",
    "migration:history": "tsx src/tools/migration-cli.ts history",
    "migration:validate": "tsx src/tools/migration-cli.ts validate",
    "monitor:health": "tsx src/monitoring/cli.ts health",
    "monitor:metrics": "tsx src/monitoring/cli.ts metrics",
    "monitor:dashboard": "tsx src/monitoring/cli.ts dashboard",
    "monitor:storage": "tsx src/monitoring/cli.ts storage",
    "monitor:stress": "tsx src/monitoring/cli.ts stress",
    "monitor": "tsx src/monitoring/cli.ts"
  },
  "dependencies": {
    "@cortex-os/a2a": "workspace:*",
    "@cortex-os/a2a-contracts": "workspace:*",
    "@cortex-os/a2a-core": "workspace:*",
    "@cortex-os/a2a-transport": "workspace:*",
    "@qdrant/js-client-rest": "^1.15.1",
    "@cortex-os/rag": "workspace:*",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/instrumentation": "^0.45.0",
    "@opentelemetry/sdk-node": "^0.45.0",
    "axios": "^1.12.2",
    "better-sqlite3": "^12.2.0",
    "circuit-breaker-js": "^0.0.1",
    "commander": "^13.0.0",
    "p-queue": "^7.4.1",
    "pino": "^8.16.0",
    "sqlite-vec": "^0.1.7-alpha.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.18.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.35.0",
    "prettier": "3.3.3",
    "prisma": "^5.18.0",
    "tsup": "8.5.0",
    "tsx": "^4.19.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "ws": "^8.18.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "tty-table": "^4.2.3"
  },
  "peerDependencies": {
    "@prisma/client": "^5.18.0"
  }
}