{
  "name": "@cortex-os/mcp-server",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "cortex-mcp-server": "./bin/mcp-server.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "predev": "pnpm --filter @cortex-os/mcp-bridge run build",
    "dev": "tsc --watch",
    "prebuild": "pnpm --filter @cortex-os/mcp-bridge run build",
    "build": "tsc",
    "pretypecheck": "pnpm --filter @cortex-os/mcp-bridge run build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:int": "vitest run --config vitest.integration.config.ts",
    "pretest": "pnpm --filter @cortex-os/mcp-bridge run build",
    "test": "pnpm run test:unit && pnpm run test:int",
    "prestart": "pnpm --filter @cortex-os/mcp-bridge run build",
    "start": "node --max-old-space-size=4096 dist/index.js",
    "start:stdio": "node --max-old-space-size=4096 dist/index.js --transport stdio",
    "start:http": "FASTMCP_HOST=127.0.0.1 node --max-old-space-size=4096 dist/index.js --transport http --port 3024 --host 127.0.0.1"
  },
  "dependencies": {
    "@cortex-os/agent-toolkit": "workspace:*",
    "@cortex-os/mcp-auth": "workspace:*",
    "@cortex-os/asbr": "workspace:*",
    "@cortex-os/mcp-bridge": "workspace:*",
    "@cortex-os/memory-core": "workspace:*",
    "@cortex-os/tool-spec": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.206.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.206.0",
    "@opentelemetry/semantic-conventions": "^1.25.1",
    "@standard-schema/spec": "^1.0.0",
    "cors": "^2.8.5",
    "execa": "^9.6.0",
    "express": "^4.18.2",
    "fastmcp": "3.19.1",
    "file-type": "^21.0.0",
    "fuse.js": "^7.1.0",
    "http-proxy-middleware": "^3.0.5",
    "mcp-proxy": "^5.5.4",
    "ollama": "^0.5.7",
    "pino": "^10.0.0",
    "prom-client": "^15.1.3",
    "strict-event-emitter-types": "^2.0.0",
    "undici": "^7.13.0",
    "uri-templates": "^0.2.0",
    "xsschema": "^0.3.5",
    "yargs": "^18.0.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/http-proxy-middleware": "^1.0.0",
    "@types/node": "^22.18.1",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
