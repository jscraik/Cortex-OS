{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "skipLibCheck": true,
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    "ignoreDeprecations": "5.0",
    "module": "NodeNext"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ],
  "references": [
    {
      "path": "../memory-core"
    },
    {
      "path": "../tool-spec"
    }
  ]
}
