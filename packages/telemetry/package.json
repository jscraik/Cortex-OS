{
  "name": "@brainwav/telemetry",
  "version": "0.1.0",
  "description": "brAInwav Cortex-OS structured telemetry system with vendor-neutral observability",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "biome check src tests",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/exporter-prometheus": "0.206.0",
    "@opentelemetry/exporter-trace-otlp-http": "0.206.0",
    "@opentelemetry/resources": "2.1.0",
    "@opentelemetry/sdk-metrics": "2.1.0",
    "@opentelemetry/sdk-trace-base": "2.1.0",
    "@opentelemetry/sdk-trace-node": "2.1.0",
    "@opentelemetry/semantic-conventions": "1.37.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "vitest": "^1.0.0",
    "@types/node": "*",
    "typescript": "*"
  },
  "keywords": [
    "brainwav",
    "cortex-os",
    "telemetry",
    "observability",
    "agent",
    "structured-logging"
  ],
  "author": "brAInwav Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jamiescottcraik/brAInwav.git",
    "directory": "packages/telemetry"
  }
}