{
    "name": "asbr",
    "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
    "projectType": "library",
    "sourceRoot": "packages/asbr/src",
    "targets": {
        "build": {
            "executor": "@nx/rollup:rollup",
            "dependsOn": [
                "generate-schema"
            ],
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                "outputPath": "dist/packages/asbr",
                "tsConfig": "packages/asbr/tsconfig.lib.json",
                "project": "packages/asbr/package.json",
                "entryFile": "packages/asbr/src/index.ts",
                "external": [
                    "rxjs/operators",
                    "rxjs/websocket",
                    "rxjs/ajax"
                ]
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "options": {
                "lintFilePatterns": [
                    "packages/asbr/**/*.ts"
                ]
            }
        },
        "test": {
            "executor": "@nx/vite:test",
            "outputs": [
                "{workspaceRoot}/coverage/{projectRoot}"
            ],
            "options": {
                "configFile": "packages/asbr/vitest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "coverage": true
                }
            }
        },
        "generate-schema": {
            "executor": "nx:run-commands",
            "options": {
                "command": "pnpm ts-node --esm scripts/connectors/generate-schema.ts"
            }
        }
    },
    "tags": [
        "scope:asbr",
        "type:core"
    ],
    "implicitDependencies": [],
    "namedInputs": {
        "default": [
            "{projectRoot}/**/*",
            "sharedGlobals"
        ],
        "production": [
            "default",
            "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
            "!{projectRoot}/tsconfig.spec.json",
            "!{projectRoot}/src/test-setup.[jt]s",
            "!{projectRoot}/test-setup.[jt]s"
        ]
    }
}
