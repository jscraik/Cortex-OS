{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "composite": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "noEmit": false,
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "src",
    "scripts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/integrations/archon-mcp.ts"
  ],
  "references": [
    {
      "path": "../../libs/typescript/contracts"
    },
    {
      "path": "../model-gateway"
    },
    {
      "path": "../agents"
    },
    {
      "path": "../observability"
    },
    {
      "path": "../a2a/a2a-contracts"
    },
    {
      "path": "../a2a/a2a-core"
    },
    {
      "path": "../a2a/a2a-transport"
    }
  ]
}
