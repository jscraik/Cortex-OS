{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "composite": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "noEmit": false,
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "src",
    "scripts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/integrations/archon-mcp.ts"
  ]
}
