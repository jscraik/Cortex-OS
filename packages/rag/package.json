{
  "name": "@cortex-os/rag",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "test": "node ../../scripts/vitest-safe.mjs run -c vitest.config.ts",
    "test:coverage": "node ../../scripts/vitest-safe.mjs run -c vitest.config.ts --coverage --coverage.reporter=json-summary --coverage.reporter=text-summary",
    "verify:coverage": "node ./scripts/verify-coverage.mjs",
    "verify:coverage:auto": "node ./scripts/verify-coverage.mjs --auto-raise",
    "verify:coverage:dry": "node ./scripts/verify-coverage.mjs --auto-raise --dry-run",
    "docs:verify": "./scripts/verify-docs.sh",
    "test:safe": "node ../../scripts/vitest-safe.mjs run",
    "test:performance": "node benchmarks/performance-suite.js",
    "test:performance:memory": "node benchmarks/performance-suite.js --profile=memory",
    "test:performance:detailed": "node benchmarks/performance-suite.js --profile=detailed",
    "benchmark:ingest": "node benchmarks/ingest.js",
    "benchmark:retrieval": "node benchmarks/retrieval.js",
    "benchmark:all": "npm run benchmark:ingest && npm run benchmark:retrieval && npm run test:performance",
    "test:performance:indexing": "node benchmarks/indexing-bench.mjs",
    "ci:bench:indexing": "node benchmarks/indexing-bench.mjs --sizes=10000,100000 --queries=5 --ef=32,64,128 --topK=10 --report=reports/indexing-performance.json",
    "security:scan": "pnpm -w security:scan:diff || pnpm -w security:scan"
  },
  "dependencies": {
    "@cortex-os/a2a-contracts": "workspace:*",
    "@cortex-os/a2a-core": "workspace:*",
    "@cortex-os/a2a-transport": "workspace:*",
    "@cortex-os/agents": "workspace:*",
    "@cortex-os/contracts": "workspace:*",
    "@cortex-os/memory-core": "workspace:*",
    "@cortex-os/model-gateway": "workspace:*",
    "@cortex-os/observability": "workspace:*",
    "@cortex-os/prompts": "workspace:*",
    "@cortex-os/protocol": "workspace:*",
    "@cortex-os/utils": "workspace:*"
  },
  "devDependencies": {
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.18.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "eslint": "^9.35.0"
  },
  "optionalDependencies": {
    "pg": "^8.16.3"
  }
}
