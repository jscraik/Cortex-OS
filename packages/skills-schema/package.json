{
  "name": "@cortex-os/skills-schema",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Machine-validated metadata schema and registry utilities for Cortex-OS skills",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./registry": {
      "types": "./dist/registry.d.ts",
      "import": "./dist/registry.js"
    },
    "./fs-loader": {
      "types": "./dist/fs-loader.d.ts",
      "import": "./dist/fs-loader.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "node ../../scripts/vitest-safe.mjs run --config vitest.config.ts",
    "test:coverage": "node ../../scripts/vitest-safe.mjs run --config vitest.config.ts --coverage",
    "lint": "pnpm lint:smart --filter @cortex-os/skills-schema",
    "dev": "tsc -w -p tsconfig.json"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "semver": "^7.6.3",
    "yaml": "^2.7.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.18.1",
    "vitest": "^3.2.4"
  }
}
