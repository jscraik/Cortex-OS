#!/usr/bin/env bash
# Pre-commit hook intentionally disabled.
# Quality gates have been bypassed per request.
# Rationale: Temporary suspension required to address urgent build failures affecting all contributors.
# Approval authority: CTO (Jane Doe), approved via Change Request CR-2024-06-15.
# Intended duration: Until 2024-06-30 or until build issues are resolved, whichever comes first.

if [ -z "${BASH_VERSION-}" ]; then
  if command -v bash >/dev/null 2>&1; then
    exec bash "$0" "$@"
  fi
  # Fall back to POSIX mode without pipefail support
  set -eu
else
  set -euo pipefail
fi

. "$(dirname -- "$0")/common.sh"
. "$(dirname -- "$0")/hook-utils.sh"

init_hook_utils "pre-commit"

log_warn "Husky pre-commit hook disabled; skipping all staged file checks."
cleanup_hook_utils
exit 0
