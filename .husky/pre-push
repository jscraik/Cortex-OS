#!/usr/bin/env bash
# Optimized pre-push hook - comprehensive quality gates
# Avoids duplicate work from pre-commit, focuses on push-time validations

set -euo pipefail

# Source shared environment bootstrap
. "$(dirname -- "$0")/common.sh"

echo "ğŸš€ Pre-push: comprehensive validation before sharing changes"

# Allow emergency bypass
if [ "${CORTEX_SKIP_PREPUSH:-}" = "1" ]; then
  echo "âš ï¸  CORTEX_SKIP_PREPUSH=1 set â€“ skipping all pre-push checks"
  exit 0
fi

# Get files that will be pushed (between local branch and remote)
LOCAL_BRANCH=$(git rev-parse --abbrev-ref HEAD)
REMOTE_BRANCH="origin/${LOCAL_BRANCH}"

# Use more reliable diff range - if remote branch doesn't exist, check against HEAD~1
if git rev-parse --verify "$REMOTE_BRANCH" >/dev/null 2>&1; then
  PUSH_RANGE="$REMOTE_BRANCH..HEAD"
else
  PUSH_RANGE="HEAD~1..HEAD"
fi

PUSH_FILES=$(git diff --name-only "$PUSH_RANGE" 2>/dev/null || git diff --name-only HEAD~1..HEAD || true)
if [ -z "$PUSH_FILES" ]; then
  echo "No files to push â€“ validation complete."
  exit 0
fi

JS_TS_PUSH=$(echo "$PUSH_FILES" | grep -E '\.(js|jsx|ts|tsx)$' || true)
PY_PUSH=$(echo "$PUSH_FILES" | grep -E '\.py$' || true)
RUST_PUSH=$(echo "$PUSH_FILES" | grep -E '\.rs$' || true)
CODE_PUSH=$(echo "$PUSH_FILES" | grep -E '\.(js|ts|mjs|jsx|tsx|py|go|java|rb|php|rs)$' || true)

echo "ğŸ“Š Push scope: $(echo "$PUSH_FILES" | wc -l | tr -d ' ') files"

##################################
# 1. Full linting (tree-wide)   #
##################################
# Note: pre-commit handles staged file lint via lint-staged
# This runs full lint for consistency across the entire tree
if [ -n "$JS_TS_PUSH" ] && command -v pnpm >/dev/null 2>&1; then
  echo "ğŸ” Full tree lint (JS/TS changes detected)"
  pnpm lint:smart || {
    echo "âŒ Full linting failed - fix issues before pushing"
    exit 1
  }
  echo "âœ… Full linting passed"
else
  echo "â­ï¸  No JS/TS changes - skipping full lint"
fi

##################################
# 2. Security scanning          #
##################################
if [ -n "$CODE_PUSH" ]; then
  echo "ğŸ›¡ï¸  Security scan (code changes detected)"
  if command -v semgrep >/dev/null 2>&1 && command -v pnpm >/dev/null 2>&1; then
    # Use targeted scan for performance
    pnpm security:scan || {
      echo "âŒ Security scan failed - address issues before pushing"
      exit 1
    }
    echo "âœ… Security scan passed"
  else
    echo "âš ï¸  semgrep not available - skipping security scan"
    echo "    Install semgrep for security validation"
  fi
else
  echo "â­ï¸  No code changes - skipping security scan"
fi

##################################
# 3. TypeScript type checking   #
##################################
if [ -n "$JS_TS_PUSH" ] && command -v pnpm >/dev/null 2>&1; then
  echo "ğŸ“ TypeScript type checking (affected projects)"
  if pnpm run | grep -q '^typecheck:smart'; then
    pnpm typecheck:smart || {
      echo "âŒ TypeScript typecheck failed"
      exit 1
    }
    echo "âœ… TypeScript typecheck passed"
  elif pnpm run | grep -q '^typecheck'; then
    echo "âš ï¸  Using legacy typecheck (consider typecheck:smart)"
    pnpm typecheck || {
      echo "âŒ TypeScript typecheck failed"
      exit 1
    }
    echo "âœ… TypeScript typecheck passed"
  else
    echo "â„¹ï¸  No typecheck script defined - skipping"
  fi
else
  echo "â­ï¸  No JS/TS changes - skipping typecheck"
fi

##################################
# 4. Python validation          #
##################################
if [ -n "$PY_PUSH" ]; then
  echo "ğŸ Python validation (ruff + pyright)"
  if [ -d python ]; then
    if command -v uv >/dev/null 2>&1; then
      (cd python && uv run ruff check . && uv run pyright) || {
        echo "âŒ Python checks failed"
        exit 1
      }
      echo "âœ… Python checks passed"
    elif command -v ruff >/dev/null 2>&1; then
      ruff check . || {
        echo "âŒ Ruff check failed"
        exit 1
      }
      echo "âœ… Ruff check passed (pyright skipped - install uv for full validation)"
    else
      echo "âš ï¸  Python tools not available - skipping Python validation"
    fi
  else
    echo "â„¹ï¸  No python/ directory - skipping Python checks"
  fi
else
  echo "â­ï¸  No Python changes - skipping Python validation"
fi

##################################
# 5. Comprehensive test suite   #
##################################
# Note: pre-commit runs affected tests quickly
# This runs a more comprehensive test suite for push validation
if [ "${CORTEX_SKIP_PUSH_TESTS:-}" != "1" ]; then
  if [ -n "$CODE_PUSH" ]; then
    echo "ğŸ§ª Comprehensive test validation"
    
    # Run affected tests with more thorough coverage
    if command -v pnpm >/dev/null 2>&1; then
      # Use timeout to prevent hanging
      if command -v timeout >/dev/null 2>&1; then
        timeout 1800 pnpm test:smart -- --passWithNoTests --coverage.enabled=false || {
          status=$?
          if [ $status -eq 124 ]; then
            echo "âš ï¸  Tests timed out after 30m - allowing push (investigate test performance)"
          else
            echo "âŒ Comprehensive tests failed - fix before pushing"
            exit 1
          fi
        }
      elif command -v gtimeout >/dev/null 2>&1; then
        gtimeout 1800 pnpm test:smart -- --passWithNoTests --coverage.enabled=false || {
          status=$?
          if [ $status -eq 124 ]; then
            echo "âš ï¸  Tests timed out after 30m - allowing push (investigate test performance)"
          else
            echo "âŒ Comprehensive tests failed - fix before pushing"
            exit 1
          fi
        }
      else
        pnpm test:smart -- --passWithNoTests --coverage.enabled=false || {
          echo "âŒ Comprehensive tests failed - fix before pushing"
          exit 1
        }
      fi
      echo "âœ… Comprehensive tests passed"
    else
      echo "âŒ pnpm not available - cannot run tests"
      exit 1
    fi
  else
    echo "â­ï¸  No code changes - skipping comprehensive tests"
  fi
else
  echo "â­ï¸  Comprehensive tests skipped (CORTEX_SKIP_PUSH_TESTS=1)"
fi

##################################
# 6. Optional structure validation #
##################################
if [ -n "$JS_TS_PUSH" ] && command -v pnpm >/dev/null 2>&1; then
  if pnpm run | grep -q '^structure:validate'; then
    echo "ğŸ—ï¸  Structure validation"
    pnpm structure:validate || {
      echo "âŒ Structure validation failed"
      exit 1
    }
    echo "âœ… Structure validation passed"
  fi
fi

echo "\nğŸ‰ All pre-push validations passed! Ready to push."
echo "ğŸ“‹ Validated: linting, security, types, tests, structure"
exit 0
